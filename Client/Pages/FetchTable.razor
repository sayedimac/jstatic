@page "/fetchtable"
@using JStatic.Shared
@inject HttpClient Http

<h1>Retrieve Storage Table rows</h1>

<p>This component demonstrates fetching rows from a storage account Table</p>

@if (theItems == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Is Sale</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in theItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Sale</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Product[] theItems = new Product[] { };
    protected override async Task OnInitializedAsync()
    {
        try
        {
            theItems = await Http.GetFromJsonAsync<Product[]>("/api/querytabledata?partkey=website2") ?? new Product[] { };
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.ToString());
        }
    }
}
