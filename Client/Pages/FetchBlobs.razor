@page "/fetchblobs"
@using JStatic.Shared
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (theBlobs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Url</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Blob in theBlobs)
            {
                <tr>
                    <td>@Blob.blobName</td>
                    <td>@Blob.blobUrl</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private BlobObject[] theBlobs = new BlobObject[] { };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            theBlobs = await Http.GetFromJsonAsync<BlobObject[]>("/api/getblobs") ?? new BlobObject[] { };
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.ToString());
        }
    }

    public class BlobObject
    {
        public BlobObject(string name, string url)
        {
            blobName = name;
            blobUrl = url;
        }
        public string blobName { get; set; }

        public string blobUrl { get; set; }
    }
}
